<!DOCTYPE html>
<html lang="en">

<!-- Include the head of the EJS. Contains the meta tags and stylesheet link -->
<%- include("../partials/head") %>

<body class="d-flex flex-column min-vh-100">
<!-- Include the header. Common style applies -->
<%- include("../partials/navbar") %>

<!-- ----------------------------------- BEGINNING OF THE BODY OF THE PAGE ----------------------------------------- -->
<div class="container mt-5" id="page-body">

    <!-- Sign in form -->
    <div class="d-flex align-items-center justify-content-center mt-5">
        <div class="w-25">

            <!-- Form header (logo and greeting) -->
            <div class="d-flex align-items-center justify-content-center">
                <div>
                    <div class="d-flex align-items-center justify-content-center">
                        <img class="mb-4" src="/images/placement-hub-logo-catalina-blue.png" alt="Placement Hub Logo"
                             width="72" height="72">
                    </div>
                    <h1 class="h3 mb-3 font-weight-normal">Welcome back!</h1>
                </div>
            </div>

            <!-- Form input -->
            <form action="/sign_in" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="email" placeholder="Enter email address">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter password">
                </div>
                <div class="mb-3 row">
                    <div class="col-8">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="remember">
                            <label class="form-check-label" for="remember">Remember Me</label>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="mb-3">
                            <button class="btn btn-primary w-100" type="submit">Sign in</button>
                        </div>
                    </div>
                </div>
            </form>

            <div class="text-center">
                <p>Not a member? <a href="/sign_up">Register</a></p>
            </div>
        </div>
    </div>

</div>
<!-- --------------------------------------- END OF THE BODY OF THE PAGE ------------------------------------------- -->

<!-- Include the footer. Common style applies -->
<%- include("../partials/footer") %>

<!-- Include the scripts-->
<%- include("../partials/scripts") %>
</body>
</html>